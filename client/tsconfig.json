{
    "compilerOptions": {
        "outDir": "lib",
        "module": "commonjs",
        "lib": [
            "es6",
            "DOM"
        ],
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "jsx": "react"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../common/*.ts"
    ]
}